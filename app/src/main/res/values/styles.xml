<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CheckBoxAndRadioButtonStyle" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="EditTextStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/editText_hint</item>
        <item name="android:textColor">@color/blue_edit_text</item>
        <item name="android:textSize">@dimen/normal_textSize</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_normal</item>
    </style>

    <style name="AnswerStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/normal_textSize</item>
        <item name="android:textColor">@color/green_correct_answer</item>
        <item name="android:text">@string/show_answer_before</item>
    </style>

    <style name="QuestionStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_normal</item>
        <item name="android:textSize">@dimen/normal_textSize</item>
    </style>
</resources>
